[Vim Project]
Name={{ cookiecutter.project_name }}

[In]
let g:syntastic_python_python_exec = getcwd() . '/.envs/py3/bin/python'
let g:syntastic_python_flake8_exec = getcwd() . '/.envs/py3/bin/flake8'
let g:py_coverage_bin = getcwd() . '/.envs/py3/bin/coverage'

let g:syntastic_python_checkers = ['python', 'flake8']
let g:syntastic_always_populate_loc_list = 1
let g:syntastic_aggregate_errors = 1
let g:ctrlp_custom_ignore = '\v' . getcwd() . '/(gem/|.envs/|docs/_build|build/|dist/)'
